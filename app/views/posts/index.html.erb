<h1>Posts</h1>

<table>
	<% @posts.each do |post| %>
		<p><h2><%= link_to post.title, post_path(post) %></h2></p>
		<p><%= post.text %></p>
		<p>
		<%= link_to 'Edit', edit_post_path(post) %>
		<%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></p>
<hr>
		
	<% end %>

</table>

<%= link_to 'New', new_post_path %>
